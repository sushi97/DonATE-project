<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tanmay.profile_activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/nav_image"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageView"
                android:layout_marginTop="30dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/profile_pictures"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:enabled="false"
                android:paddingBottom="0dp"
                android:text="Vikas"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"

                android:textStyle="italic"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <TextView
               android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="Email"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:enabled="false"
                android:text="tbagdiya97@gmail.com"
                android:textSize="17sp"
                android:layout_weight="3"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
            android:text="Phone"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="8275854193"
                android:inputType="number"
                android:enabled="false"
                android:layout_marginTop="15dp"
                android:gravity="bottom"
                android:textSize="20dp"
                android:layout_weight="3"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:text="City"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:layout_weight="1"/>


            <EditText
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Pune"
                android:inputType="text"
                android:enabled="false"
                android:layout_marginTop="15dp"
                android:gravity="bottom"
                android:textSize="20dp"
                android:layout_weight="3"/>

         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:text="Area"
                android:layout_marginTop="15dp"
                android:textSize="20sp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/location"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="vsvsdvh ivishdvishdvoihdv ihviohvdov"
                android:layout_marginTop="15dp"
                android:enabled="false"
                android:gravity="bottom"
                android:textSize="17sp"
                android:layout_weight="3"/>

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/save"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:background="@drawable/background_logic"
        android:text="SAVE"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>
    <ImageButton
        android:id="@+id/edit"
        android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_height="50dp"
        android:src="@drawable/editaction"
        android:background="@drawable/buttonround"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>
